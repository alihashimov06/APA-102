
@model List<GetProductVM>

@{
    int count = 0;
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Product Table</h4>
                <div class="table-responsive">
                    <a asp-action="Create" class="btn btn-success">Create</a>
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>
                                    №
                                </th>
                                <th>
                                    İmage
                                </th>
                                <th>
                                    Name
                                </th>
                                <th>
                                    Category 
                                </th>
                                <th>
                                    Prize
                                </th>
                                <th>
                                    Settinga
                                </th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (GetProductVM product in Model)
                            {
                                count++;
                                <tr>
                                    <td>
                                        <p>@count</p>
                                    </td>
                                    <td>
                                        <img src="~/assets/images/website-images/@product.ImageURL">
                                    <td>
                                        <p>@product.Name</p>
                                    </td>
                                    <td>
                                        <p>@product.CategoryName</p>
                                    </td>
                                    <td>
                                        <p>@product.Prize</p>
                                    </td>
                                    <td>
                                        <a class="btn btn-warning" asp-action="update" asp-route-id="@product.Id"><i class="mdi mdi-border-color"></i></a>
                                        <a class="btn btn-danger" asp-action="delete" asp-route-id="@product.Id"><i class="mdi mdi-delete"></i></a>
                                        <a class="btn btn-primary" asp-action="detail" asp-route-id="@product.Id"><i class="mdi mdi-information"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
